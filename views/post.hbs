<div class="row">
  <div class="col-sm-4">
    <div class="card">
      <div class="card-body">
        {{#with userPost}}
        <h5 class="card-title">Фото</h5>
        <p class="card-text">{{username}}</p>
        {{!-- <a href="#" class="btn btn-primary">Go somewhere</a> --}}
        {{/with}}
      </div>
    </div>
  </div>

  <div class="col-sm-8">
    <div class="card">
      {{#with post}}
      <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <p class="card-text">{{description}}</p>
        
        <div class="buttonPost">
          <form action="/post/editPost/{{id}}" method="get">
            <input type="submit" value="Редактировать" class="btn btn-primary btn-sm">
          </form>
          <form action="/post/deletePost/{{id}}" method="post">
            <input type="submit" value="Удалить" class="btn btn-danger btn-sm">
          </form>
        </div>
      </div>
    </div>
    {{#if user}}
    <form class="comment" action="/post/addComment/{{id}}" method="POST">
      <label for="">Добавить комментарий:</label>
      <textarea name="comment"></textarea>
      <input type="submit" value="Дабавить" class="btn btn-primary">
    </form>
    {{/if}}
    {{/with}}
    <div class="allComments">
      <h4>Комментарии:</h4>
      {{#each allComments}}
      <div class="card">
        <div class="card-body">
          <a href="">{{username}}</a>
          <p>{{message}}</p>
          {{#intl locales="ru-BY"}}
          <pre>{{formatRelative date}}</pre>
          {{/intl}}
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>