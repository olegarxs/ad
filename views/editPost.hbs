<form action="/post/editPost/{{id}}" method="POST" style="display: flex; flex-direction: column; width: 500px">
    <label for="">Название темы:</label>
    <input type="text" name="title" value="{{post.title}}">
    <label for="">Описание</label>
    <textarea type="text" name="description">{{post.description}}</textarea>
    <input type="submit" value="Изменить" class="btn btn-primary" style="margin-top: 20px;">
</form>